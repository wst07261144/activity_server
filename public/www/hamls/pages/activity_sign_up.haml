%header(id="activity_sign_up")
  活动报名（{{number}} 人）
  .header-left
    %a.btn.btn-primary(ng-tap="back_to_activity_list_page()")
      %i返回
  .header-right(ng-switch="selection")
    %a.btn.btn-primary(ng-tap="sign_up()" ng-Switch-when="before_running" )开始
    %a.btn.btn-primary(ng-tap="stop()" ng-Switch-when="running")结束
    %a.btn.btn-primary.disabled(ng-Switch-default) 结束
#wrapper.wrapper
  .scrollable
    %ul.list-style-2
      %li(style="font-family:arial;color:black;line-height:40px" ng-repeat="sign_up_name in sign_up_names|orderBy:sign_up_order") {{sign_up_name.name}} {{sign_up_name.phone}}
%footer.footer
  %ul.footer-nav.footer-nav-2tabs
    %li
      %a报名
    %li
      %a(ng-tap="goto_bid_list_page()")竞价













