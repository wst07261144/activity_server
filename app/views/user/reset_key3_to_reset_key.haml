%h2 活动通
%div(style="background:#F5F5F5" class="modal fade in")
  .nav-header
    %h4重置密码
    .right
      =link_to  "用户登录",root_path
  %br
  %br
  %div(class="index-login" style="text-align:center;")
    =form_for(:user) do |f|
      .input-prepend
        = f.label :'请设置密码' ,:class=>"add-on"
        = f.text_field :password1 ,:type=>"text",:placeholder=>"请输入新密码"
      %br
      .input-prepend
        = f.label :'请确认密码' ,:class=>"add-on"
        = f.text_field :password2 ,:type=>"text",:placeholder=>"请再次输入"
      %br
        .label-warning
          =flash.now[:notice6]
          =flash.now[:notice7]
      %br
      %div(style="text-align:center")
        = f.submit "确认修改", :class=> "btn btn-primary"
      %br